[MASTER]
ignore=venv,env,.venv,.git,__pycache__
jobs=4

[MESSAGES CONTROL]
disable=
    missing-docstring,
    too-few-public-methods,
    invalid-name,
    too-many-arguments,
    too-many-locals,
    protected-access,
    too-many-instance-attributes,
    too-many-branches,
    line-too-long

[FORMAT]
max-line-length=127

[DESIGN]
max-args=8
max-locals=20
max-returns=8
max-branches=15
